<style>
    @media (max-width:750px){
        .commitments_all{
            padding:64px 0 50px;
            background: {{section.settings.background}};
        }
        .commitments_all .title{
            font-weight: 600;
            line-height: 1;
            padding-top: 15px;
            letter-spacing: 0.8px;
            font-size: {{section.settings.title_m_font_size}}px;
        }
        .commitments_all .description{
            font-weight: 300;
            padding-top: 12px;
            line-height: 1.5;
            letter-spacing: 0.8px;
            width: 89%;
            font-size: {{section.settings.description_m_font_size}}px;
        }
    }
    @media(min-width:750px){
        .commitments_all{
            padding:100px 0;
            background: {{section.settings.background}};
        }
        
        .commitments_all .commitments{
            margin-top: 50px;
        }
        

        .commitments_all .title{
            font-weight: 600;
            line-height: 1;
            padding-top: 30px;
            font-size: {{section.settings.title_font_size}}px;
        }
        .commitments_all .description{
            font-weight: 300;
            padding-top: 18px;
            line-height: 1.5;
            font-size: {{section.settings.description_font_size}}px;
        }
        .commitments_all .commitments img{
            transition: transform .3s,-webkit-transform .3s;
        }
        .commitments_all .commitments img:hover{
            transform: scale(1.025);
        }
    }
    .commitments_all .swiper{
        overflow: hidden;
    }
</style>
<div class="commitments_all">
    <div class="container">
        <div class="header ithfaen_title  hidden-phone">{{section.settings.header}}</div>
        <div class="commitments">
            <div class="swiper commitments_swiper">
                <div class="swiper-wrapper commitments_wrapper">
                    {% for block in section.blocks %}
                        <div class="swiper-slide">
                            {% if block.settings.img != blank %}
                                <img loading="lazy" class="image_left" {% render 'image-attributes' , image: block.settings.img%}>
                            {% endif %}
                            <div class="commitments_description">
                                {% if block.settings.title != blank %}
                                    <div class="title">{{block.settings.title}}</div>
                                {% endif %}
                                {% if block.settings.description != blank %}
                                    <div class="description hidden-phone">{{block.settings.description}}</div>
                                {% endif %}
                                {% if block.settings.m_description != blank %}
                                    <div class="description hidden-tablet-and-up">{{block.settings.m_description}}</div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        var swiper = new Swiper(".commitments_swiper", {
            observer: true,
            observeParents: true,
            breakpoints: {
                320: {
                    //当屏幕宽度大于等于320
                    slidesPerView: 1.3,
                    spaceBetween: 6,
                },
                741: {
                    //当屏幕宽度大于等于741
                    slidesPerView: 3,
                    spaceBetween: 12,
                },
            },
        });
    })
</script>
{% schema %}
    {
        "name": "commitments",
        "class": "commitments",
        "settings": [
            {
                "type": "richtext",
                "id": "header",
                "label": "header"
            },
            {
                "type": "header",
                "content": "blocks style"
            },
           
            {
                "type": "range",
                "id": "title_font_size",
                "min": 12,
                "max": 100,
                "unit": "px",
                "step": 1,
                "label": "pc font size",
                "default": 14
            },
            {
                "type": "range",
                "id": "title_m_font_size",
                "min": 12,
                "max": 100,
                "unit": "px",
                "step": 1,
                "label": "mobile font size",
                "default": 12
            },
            {
                "type": "range",
                "id": "description_font_size",
                "min": 12,
                "max": 100,
                "unit": "px",
                "step": 1,
                "label": "pc font size",
                "default": 14
            },
            {
                "type": "range",
                "id": "description_m_font_size",
                "min": 12,
                "max": 100,
                "unit": "px",
                "step": 1,
                "label": "mobile font size",
                "default": 12
            },
            {
                "type": "color",
                "id": "background",
                "label": "background"
            }
        ],
        "blocks": [
            {
                "type": "img",
                "name": "img",
                "limit": 4,
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "title"
                    },
                    {
                        "type": "richtext",
                        "id": "description",
                        "label": "px description"
                    },
                    {
                        "type": "richtext",
                        "id": "m_description",
                        "label": "mobile description"
                    },
                    {
                        "type": "image_picker",
                        "id": "img",
                        "label": "Img"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "commitments"
            }
        ]
    }
{% endschema %}