<style>
    @media (max-width:999px){
        .contact_text_all{
            margin: 50px 0;
            text-align: center;
        }
        .contact_text_all .description{
            padding:0 40px 50px;
            line-height: 1.8;
            letter-spacing: 0.3px;
            font-size: {{section.settings.m_font_size}}px;
        }
        .contact_text_all .question{
            margin-bottom: 13px;
            line-height: 1;
            font-weight: 600;
            font-size: {{section.settings.qu_m_font_size}}px;
        }
        .contact_text_all .question_answer:not(:first-child) .question{
            margin-top: 26px;
        }
        .contact_text_all .answer{
            letter-spacing: 0.8px;
            font-weight: 300;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px 0;
            line-height: 1;
            font-size: {{section.settings.an_m_font_size}}px;
            background:{{section.settings.background}};
            color:{{section.settings.color}};
        }
        .contact_text_all .answer svg{
            width: 27px;
            height: 14px;
            padding-left: 14px;
        }
        .contact_text_all .answer path{
            fill: #fff;
        }
    }
    @media(min-width:1000px){
        .contact_text_all{
            margin: 100px 0;
            text-align: center;
        }
        .contact_text_all .question_answer_all{
            display: grid;
            grid-template-columns: repeat(3,1fr);
            grid-gap: 10px;
        }
        .contact_text_all .description{
            margin-bottom: 100px;
            font-size: {{section.settings.font_size}}px;
        }
        .contact_text_all .question{
            line-height: 1;
            margin-bottom: 30px;
            font-weight: 600;
            font-size: {{section.settings.qu_font_size}}px;
        }
        .contact_text_all .answer{
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 24px 0;
            line-height: 1;
            border: 1px solid #151515;
            transition: all .8s ease;
            position: relative;
            z-index: 1;
            border: 1px solid {{section.settings.background}};
            font-size: {{section.settings.an_font_size}}px;
            background:{{section.settings.background}};
            color:{{section.settings.color}};
        }
        .contact_text_all .answer svg{
            width: 32px;
            height: 14px;
            padding-left: 12px;
        }
        .contact_text_all .answer path{
            fill: #fff;
        }
    }
</style>
<div class="container">
    <div class="contact_text_all">
        {% if section.settings.description != blank %}
            <div class="description hidden-phone">{{section.settings.description}}</div>
        {% endif %}
        {% if section.settings.m_description != blank %}
            <div class="description hidden-tablet-and-up">{{section.settings.m_description}}</div>
        {% endif %}
        {%- if section.blocks.size > 0 -%}
            <div class="question_answer_all">
                {% for block in section.blocks %}
                    <div class="question_answer">
                        {% if block.settings.question != blank %}
                            <div class="question">{{block.settings.question}}</div>
                        {% endif %}
                        {% if block.settings.answer != blank %}
                            <a href="{{block.settings.answer_link}}" class="answer btn-15">{{block.settings.answer}}
                                {%- include 'icon' with 'right-arrow', width: 18, height: 10, direction_aware: true -%}
                            </a>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
{% schema %}
    {
        "name": "contact text",
        "class": "contact_text",
        "settings": [
            {
                "type": "richtext",
                "id": "description",
                "label": "pc title"
            },
            {
                "type": "richtext",
                "id": "m_description",
                "label": "mobile title"
            },
            {
                "type": "range",
                "id": "font_size",
                "min": 12,
                "max": 100,
                "unit": "px",
                "step": 1,
                "label": "pc font size",
                "default": 14
            },
            {
                "type": "range",
                "id": "m_font_size",
                "min": 12,
                "max": 100,
                "unit": "px",
                "step": 1,
                "label": "mobile font size",
                "default": 12
            },
            {
                "type": "header",
                "content": "blocks style"
            },
            {
                "type": "range",
                "id": "qu_font_size",
                "min": 12,
                "max": 100,
                "unit": "px",
                "step": 1,
                "label": "question pc font size",
                "default": 14
            },
            {
                "type": "range",
                "id": "qu_m_font_size",
                "min": 12,
                "max": 100,
                "unit": "px",
                "step": 1,
                "label": "question mobile font size",
                "default": 12
            },
            {
                "type": "range",
                "id": "an_font_size",
                "min": 12,
                "max": 100,
                "unit": "px",
                "step": 1,
                "label": "answer pc font size",
                "default": 14
            },
            {
                "type": "range",
                "id": "an_m_font_size",
                "min": 12,
                "max": 100,
                "unit": "px",
                "step": 1,
                "label": "answer mobile font size",
                "default": 12
            },
            {
                "type": "color",
                "id": "background",
                "label": "background"
            },
            {
                "type": "color",
                "id": "color",
                "label": "color"
            }
        ],
        "blocks": [
            {
                "type": "question",
                "name": "question",
                "limit": 3,
                "settings": [
                    {
                        "type": "text",
                        "id": "question",
                        "label": "question"
                    },
                    {
                        "type": "text",
                        "id": "answer",
                        "label": "answer"
                    },
                    {
                        "type": "url",
                        "id": "answer_link",
                        "label": "link"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "contact text"
            }
        ]
    }
{% endschema %}