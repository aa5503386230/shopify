<div class="blogCollection margin-top">
    <div class="container blogCollection_conter">
        <div class="blogCollection_top">
            <div class="blogCollection_title ithfaen_title">{{ section.settings.title }}</div>
            <div class="blogCollection_text">{{ section.settings.text }}</div>
        </div>
        <div class="blogCollection_bottom">
          <div class="swiper blogCollection_swiper">
            <div class="swiper-wrapper">
            {% assign blogCollection = section.settings.blog_collection.articles %}
            {%- for article in blogCollection -%}
               <div class="blogCollection_lsit swiper-slide">
                  <a href="{{ article.url }}">
                     <img class="article-item__image" sizes="(max-width: 740px) 81vw, (max-width: 999px) 37vw, 425px" loading="lazy" {% render 'image-attributes', image: article.image, sizes: '600,700,800,1000,1200,1400,1600,1800,2000' %}>
                     <div class="blogCollection_lsitBox">
                     <span class="blogCollection_lsitTags">{{ article.tags }}</span>
                     <div class="blogCollection_lsitTitle">{{ article.title }}</div>
                     <span class="blogCollection_lsitLink">Read on</span>
                     </div>
                  </a>
               </div>
