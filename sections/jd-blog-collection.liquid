          </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
          var mySwiper  = new Swiper(".blogCollection_swiper", {
       
        navigation: {
          nextEl: ".blogCollection_swiper .swiper-button-next",
          prevEl: ".blogCollection_swiper .swiper-button-prev",
        },
        breakpoints: {
            320: {
            //当屏幕宽度大于等于320
            slidesPerView: 2.3,
            spaceBetween: 10,
            },
            741: {
            //当屏幕宽度大于等于741
             slidesPerView: 4,
              spaceBetween: 10,
            },
        },
      });
     $.each(mySwiper,function(index){
         mySwiper[index].navigation.$nextEl.addClass('hide');
       mySwiper[index].navigation.$prevEl.addClass('hide');
            //鼠标移出隐藏按钮，移入显示按钮
    mySwiper[index].el.onmouseover=function(){
        mySwiper[index].navigation.$nextEl.removeClass('hide');
        mySwiper[index].navigation.$prevEl.removeClass('hide');
    }
    mySwiper[index].el.onmouseout=function(){
        mySwiper[index].navigation.$nextEl.addClass('hide');
        mySwiper[index].navigation.$prevEl.addClass('hide');
    }
      });
    })
</script>
