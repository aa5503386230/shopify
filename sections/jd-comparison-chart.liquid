<div class="beforeAfter_conter margin-top">
  <div class="compareConter container">
    <div class="hidden-phone">
      <div class="beerSlider_conter">
        <div class="beerSlider_left">
          <div class="beerSlider_title ithfaen_title">{{ section.settings.subtitle }}</div>
          <div class="beerSlider_text">{{ section.settings.describe }}</div>
          <div class="beerSlider_button">
            <a class="interactionEffect btn-15" href=" {% if section.settings.beerSlider_link != blank %} {{ section.settings.beerSlider_link }} {% else %} javascript:; {% endif %}">{{ section.settings.beerSlider_botton }}</a>
          </div>
        </div>
        <div class="beerSlider_list">
          {% if section.settings.individualImg != blank or section.settings.individualImg_m != blank %}
            <div class="individualImg">
              <img
                class="lazyload"
                src="{{section.settings.individualImg | img_url: '740x621' }}"
                alt="section.settings.individualImg">
            </div>
          {% else %}
            <div id="comparison">
              <figure
                class="beforeImg"
                style=" background-image:url({{ section.settings.beforeImg | img_url: '740x621' }})"
                data-before="{{ section.settings.beforeImg | img_url: '740x621' }}">
                <div
                  class="afterImg"
                  style=" background-image:url({{ section.settings.afterImg | img_url: '740x621' }})"
                  id="divisor"
                  data-after="{{ section.settings.afterImg | img_url: '740x621' }}"></div>
              </figure>
              <input
                type="range"
                min="0"
                max="100"
                value="50"
                id="slider"
                oninput="moveDivisors()">
              <span class="progressBar progress_bar" style="left: 50%"></span>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="hidden-tablet-and-up">
      <div class="beerSlider_conter">
        <div class="beerSlider_left">
          <div class="beerSlider_title ithfaen_title">{{ section.settings.subtitle }}</div>
          <div class="beerSlider_text">{{ section.settings.describe }}</div>
          {% comment %} <div class="beerSlider_button">
            <a class="interactionEffect btn-15" href=" {% if section.settings.beerSlider_link != blank %} {{ section.settings.beerSlider_link }} {% else %} javascript:; {% endif %}">{{ section.settings.beerSlider_botton }}</a>
