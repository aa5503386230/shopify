</div>

<script>
  var divisor = $('#divisor');
  var divisor1 = $('#divisor1');
  var slider = document.getElementById('slider');
  var slider1 = document.getElementById('slider1');
  function moveDivisors() {
    divisor.css('width', slider.value + '%');
    $('.progressBar').css({
        left: `${
        slider.value
      }%`,
      transition: 'unset'
    })
  }
  function moveDivisor1() {
    divisor1.css('width', slider1.value + '%');
    $('.progressBar1').css({
        left: `${
        slider1.value
      }%`,
      transition: 'unset'
    })
  }
</script>
