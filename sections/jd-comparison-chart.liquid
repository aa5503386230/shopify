                <figure
                  class="beforeImg"
                  style=" background-image:url({{ section.settings.beforeImg1 | img_url: '689x577' }})"
                  data-before="{{ section.settings.beforeImg1 | img_url: '689x577' }}">
                  <div
                    class="afterImg"
                    style=" background-image:url({{ section.settings.afterImg1 | img_url: '689x577' }})"
                    id="divisor1"
                    data-after="{{ section.settings.afterImg1 | img_url: '689x577' }}"></div>
                </figure>
                <input
                  type="range"
                  min="0"
                  max="100"
                  value="50"
                  id="slider1"
                  oninput="moveDivisor1()">
                <span class="progressBar1 progress_bar" style="left: 50%"></span>
              </div>
            {% endif %}
